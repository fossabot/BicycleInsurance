<root>
  <generalItems>
    <!--General-->
    <item id="pageTitle">
      Bicycle Insurance Quote
    </item>
    <!--end general-->

    <!--    Quote-->
    <item id="Quote.ExcessDetails">
      <![CDATA[
        <div class="fine-print">
          <div class="body-text-heading">
            Excesses
          </div>
  
          <div class="body-text">
            <div class="row">
              <div class="large-12 column collapse-left">
                <span>The total of your excess is specified above. Upon the issuing of a policy, the applicable excesses will be shown on your schedule
                </span>
              </div>
            </div>
   
          </div>
        </div>
      ]]>
    </item>

    <item id="Quote.ImportantQuoteInformation">
      <![CDATA[
        <div class="fine-print">
          <div class="body-text-heading body-text">Important</div>
          <div class="body-text important-text">
            Please remember that this is a quote only and does not provide cover. The final information you provide to RAC Insurance may affect the terms and premium we offer.<br/>
          </div>
        </div>
      ]]>
    </item>

    <item id="Quote.PDSInformation">
      <![CDATA[
          <div class="fine-print">
            <div class="body-text-heading">Product Disclosure Statement (PDS)</div>
            <div class="body-text pds-text">
              It is important that you read and understand the product features and details outlined in the <a id="pds-url" class="link" href="http://rac.com.au/insurance/product-disclosure-statements/bicycle-insurance-disclosure" target="_newtab">Product Disclosure Statement</a>.<br/>
            </div>
          </div>
        ]]>
    </item>
    <!--    End Quote-->
  </generalItems>

