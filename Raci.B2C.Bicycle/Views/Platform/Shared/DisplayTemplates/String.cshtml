@using Raci.B2C.Web.Models.Common
@using Raci.B2C.Web.Mvc.Dependency

@{    
    EditorParameters editorParameters = Html.ViewData.GetEditorParameters();
    editorParameters.Editor = SimpleString;
    editorParameters.DependencyScriptType = DependencyStartupScriptType.String;
}

@UIControls.SimpleQuestionAnswer(Html, editorParameters)

@helper SimpleString(EditorParameters editorParameters)
{
    <div id="@ViewData.TemplateInfo.GetFullHtmlFieldId(Html.StringExpressionFor(x => x))_Answer" class="display-answer">
       @Model
    </div>
}
